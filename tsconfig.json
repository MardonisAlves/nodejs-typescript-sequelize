{
    "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule":true,
    "strict": true,
    "outDir": "./build",
    "typeRoots": [
        "../node_modules/@types"
    ],
    "types": [
        "node"
    ]
    },
    "include": [
        "server/**/*.ts",
        "server/**/**/*.ts",
        "server/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "__tests__"
    ],
    "compileOnSave": true,
    "buildOnSave":true
}